<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- UserDao的实现类们 -->
    <bean id="MysqlImpl" class="ioc_di_after.UserDaoMysqlImpl"/>
    <bean id="SQLServerImpl" class="ioc_di_after.UserDaoSQLServerImpl"/>
    
    <!-- UserService的实现类 -->
    <bean id="ServiceImpl" class="ioc_di_after.base.UserServiceImpl">
        <!--注意: 这里的name并不是属性 , 而是set方法后面的那部分 , 首字母小写-->
        <!--引用另外一个bean , 不是用value 而是用 ref-->
<!--        <property name="userDao" ref="MysqlImpl"/>-->
        <property name="userDao" ref="SQLServerImpl"/>
    </bean>
</beans>
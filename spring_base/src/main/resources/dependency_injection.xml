<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 1、常量注入   -->
    <bean id="studentConst" class="ioc_dependency_injection.base.Student">
        <property name="name" value="你的名字"/>
    </bean>
    
    <!--  2、Bean注入  -->
    <!--  注意点：这里的值是一个引用，ref  -->
    <bean id="addr" class="ioc_dependency_injection.Address">
        <property name="address" value="北京"/>
    </bean>
    <bean id="studentBean" class="ioc_dependency_injection.base.Student">
        <property name="name" value="Bean的名字"/>
        <property name="address" ref="addr"/>
    </bean>
    
    <!-- 3、数组注入   -->
    <bean id="studentArray" class="ioc_dependency_injection.base.Student">
        <property name="name" value="ArrayInjection"/>
        <property name="address" ref="addr"/>
        <property name="books">
            <array>
                <value>Java</value>
                <value>Python</value>
                <value>Golang</value>
            </array>
        </property>
    </bean>
    
    <!-- 4、List注入   -->
    <bean id="studentList" class="ioc_dependency_injection.base.Student">
        <property name="name" value="ListInjection"/>
        <property name="hobbies">
            <list>
                <value>吃饭</value>
                <value>睡觉</value>
                <value>打豆豆</value>
            </list>
        </property>
    </bean>
    
    <!-- 5、Map注入   -->
    <bean id="studentMap" class="ioc_dependency_injection.base.Student">
        <property name="name" value="MapInjection"/>
        <property name="card">
            <map>
                <entry key="建行" value="1001"/>
                <entry key="招商" value="1002"/>
            </map>
        </property>
    </bean>
    
    <!--  6、set注入  -->
    <bean id="studentSet" class="ioc_dependency_injection.base.Student">
        <property name="name" value="SetInjection"/>
        <property name="games">
            <set>
                <value>LoL</value>
                <value>Ping</value>
                <value>Pong</value>
            </set>
        </property>
    </bean>
    
    <!--  7、Null注入  -->
    <bean id="studentNull" class="ioc_dependency_injection.base.Student">
        <property name="name" value="NullInjection"/>
        <property name="wife">
            <null></null>
        </property>
    </bean>
    
    <!--  8、Properties注入  -->
    <bean id="studentProperties" class="ioc_dependency_injection.base.Student">
        <property name="name" value="PropertiesInjection"/>
        <property name="info">
            <props>
                <prop key="小名">小小名</prop>
                <prop key="性别">男</prop>
                <prop key="学号">12345</prop>
            </props>
        </property>
    </bean>
</beans>
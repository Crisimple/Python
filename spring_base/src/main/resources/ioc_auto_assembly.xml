<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--  Spring配置  -->
    <bean id="dog" class="ioc_auto_assembly.Dog"/>
    <bean id="cat" class="ioc_auto_assembly.Cat"/>
    <bean id="cat2" class="ioc_auto_assembly.Cat"/>

    <!-- 自动装配，这里可以用自动化装配byType或byName来代替   -->
    <!-- <bean id="user" class="ioc_auto_assembly.User" autowire="byName">-->
    <bean id="user" class="ioc_auto_assembly.User" autowire="byType">
    <!--<bean id="user" class="ioc_auto_assembly.User">-->
        <property name="cat" ref="cat2"/>
        <property name="dog" ref="dog"/>
        <property name="str" value="tester"/>
    </bean>
</beans>